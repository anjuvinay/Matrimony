<section>
    <div class="container">
      <div class="row mt-4"></div>
        <table class="table mt-5" id="profilesTable">
  <thead>
    <tr>
      <th scope="col">No</th>
       <th scope="col">Photo</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Religion</th>
      <th scope="col">Profession</th>
      <th scope="col">Place</th>
    </tr>
  </thead>
  <tbody>
    {{#each profiles}}
    <tr>     
      <th scope="row">{{@index}}</th>
      <td><img style="width: 50px; height: 50px;" src="/profile-images/{{this._id}}.jpg" alt=""></td>
      <td>{{this.Name}}</td>
      <td>{{this.age}}</td>
      <td>{{this.religion}}</td>
       <td>{{this.job}}</td>
      <td>{{this.location}}</td>
      <td>
          {{#if_equal this.status "Verified"}}
          <a href="/admin/verify-status/{{this._id}}" class="btn btn-info" >Verified</a>
          {{else}}
          <a href="/admin/verify-status/{{this._id}}" class="btn btn-info" >Verify</a>
          {{/if_equal}}
       </td>
      
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>

<script>
  $(function(){
    $('#profilesTable').DataTable()
  })
</script>