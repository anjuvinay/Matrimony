<section>
    <div class="container mt-5 ml-5">
       {{#each profiles}}
<div class="card mb-3" style="max-width: 980px; max-height: 270px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img style="width: 16rem; height:16.8rem;" src="/profile-images/{{this._id}}1.jpg" class="img-thumbnail" alt="...">
    </div>
    <div class="col-md-8 pl-0">
      <div class="card-body">
        <h5 class="card-title">{{this.Name}}</h5>
        <p class="card-text">{{this.age}} Years, {{this.religion}}, {{this.job}}, {{this.location}}</p>
        <p class="card-text">{{this.sendDetails.Msg}}</p>
        <p class="card-text">Interest send on {{this.sendDetails.Date}}</p>
        {{#if_equal this.sendDetails.Response "Declined"}}
        <p class="card-text">{{this.Name}} has {{this.sendDetails.Response}} your Interest</p>
         {{/if_equal}}
         {{#if_equal this.sendDetails.Response "Accepted"}}
        <p class="card-text">{{this.Name}} has {{this.sendDetails.Response}} your Interest</p>
         {{/if_equal}}
        <a href="/view-profile/{{this._id}}" class="btn btn-secondary mr-4">View Profile</a>
        <a href="/cancel-intrest/{{this._id}}" class="btn btn-secondary">Cancel Interest</a>
      </div>
    </div>
  </div>
</div>
 {{/each}}
</div>
</section>