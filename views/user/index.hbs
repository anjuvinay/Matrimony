
   <section>
    <div class="container mt-5">
    <div class="row">
      {{#each person}}
      <div class="col-md-3 p-3">
        <div class="card" style="width: 15rem; height:25rem">
  <img style="width: 15rem; height: 13rem;" src="{{this.image}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.age}}, {{this.religion}}</p>
    <p class="card-text">{{this.job}}, {{this.place}}</p>
    <a href="#" class="btn btn-primary">View Profile</a>
  </div>
</div>
      </div>
      {{/each}}
       </div>

    </div>
   </section>

                       